<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Directorio raíz externo -->
    <external-path
        name="external_storage_root"
        path="." />

    <!-- Directorio de archivos externos de la app -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- Directorio de imágenes de la app -->
    <external-files-path name="images" path="Pictures/" />

    <!-- Directorio de caché de la app -->
    <cache-path
        name="cache"
        path="/" />

    <!-- Directorio de archivos internos -->
    <files-path
        name="files"
        path="/" />
</paths>